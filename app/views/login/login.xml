<Page loaded="loaded">
    <StackLayout orientation="vertical">
        <Image src="res://logo"
               stretch="none"
               horizontalAlignment="center"
        />
        <TextField hint="Email Address"
                   keyboardType="email"
                   autocorrect="false"
                   autocapitalizationType="none"
        />
        <TextField hint="Password"
                   secure="true"
        />

        <Button class="btn-primary btn"
                text="Sign in"
                tap="signIn"
        />
        <Button class="link"
                text="Sign up for Groceries"
                tap="register"
        />
    </StackLayout>
</Page>